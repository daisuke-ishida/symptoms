<div class="row">
    <aside class="col-md-4">
        <section class="user-info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %></br>
                <%= @user.age %>歳</br>
                <%= @user.sex %></br>
            </h1>
            <span>
               <% @symptom.each do |symptom| %>
                  <% if current_user.symptoms.include?(symptom) %>
                    <span class="strong"> <%= symptom.name %></span>
                  <% else %>
                    <span> <%= symptom.name %></span>
                  <% end %>
                <% end %>
            </span>
        </section>
    </aside>
    
    <% if @users.any? %>
        <div class="col-md-8">
             <%= page_entries_info @users %>
        <% @users.each do |user| %>
              <div id="users follow" class="container-fluid well" style="padding-bottom: 10px">
                <div class="col-md-4">
                 <%= gravatar_for user %>
                 <%= user.name %></br>
                 <%= user.age %>歳</br>
                 <%= user.sex %></br>
                 <% @symptoms.each do |symptom| %>
                  <% if current_user.symptoms.include?(symptom) %>
                    <span class="strong"> <%= symptom.name %></span>
                  <% else %>
                    <span> <%= symptom.name %></span>
                  <% end %>
                <% end %>
                 <div class="action clearfix">
                  <%= link_to "Profile", user_path(user.id), class: "btn btn-info" %>
                 </div>
                </div>
                 <div class="col-md-6 well">
                    <% user.posts.order(created_at: :desc).limit(1).each do |p| %>
                    <%= p.content %>
                    <% end %>
                 </div>
              </div>
        <% end %>
         <%= paginate @users %>
        </div>
    <% end %>
 </div>
