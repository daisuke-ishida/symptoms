<%= form_for(@user, :html=>{class:"form-horizontal"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
        <%= f.label :name, class:"col-md-2 label-control" %>
        <div class="col-md-10">
            <%= f.text_field :name, class:"form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :age, class:"col-md-2 label-control"  %>
        <div class="col-md-10">
            <%= f.text_field :age, class:"form-control" %>
        </div>
    </div>  
    <div class="form-group">    
        <%= f.label :sex, class:"col-md-2 label-control"  %>
        <div class="col-md-10">
            <%= f.select :sex, ['男性', '女性'], { include_blank: '選択してください' } %>
        </div>
    </div>  
    <div class="form-group">    
        <%= f.label :email, class:"col-md-2 label-control"  %>
        <div class="col-md-10">
            <%= f.text_field :email, class:"col-md-10 form-control" %>
        </div>
    </div>  
    <div class="form-group">    
        <%= f.label :password, class:"col-md-2 label-control"  %>
        <div class="col-md-10">
            <%= f.password_field :password, class:"form-control" %>
        </div>
    </div>   
    <div class="form-group">   
        <%= f.label :password_confirmation, "Confirmation", class:"col-md-2 label-control"  %>
        <div class="col-md-10">
            <%= f.password_field :password_confirmation, class:"col-md-10 form-control" %>
        </div>
     </div>
     
     <div class="form-group">
           <%= f.label :symptoms, "どんな症状でお困りですか？" %>
            <%= f.collection_check_boxes(:ownerships, Symptom.all,:id,:name) do |s| %>
                <%= s.label { s.check_box + s.text } %>
            <% end %>
            
            <%#  POPUP WIndows 表示で症状追加 %>

            <%= link_to("その他にお困りの場合はこちら",
                {:controller => 'symptoms', :action => 'new'},
                {:onclick=>"window.open(this.href, 'new_symptom', 'height=200, width=800');return false;" })
            %>
     </div>
     <div class="form-group">
        <%= f.submit "Create my account", class: "btn btn-primary" %>
    </div>
<% end %>

