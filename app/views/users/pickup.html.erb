<% if @users == nil %>
    render ''
<% else %>

<div class="container">
   
    <%= page_entries_info @users %>
     <div class="container-inner inner-default clearfix">
         <% @users.each do |user| %>
           <%= gravatar_for(user) %>
           <%= user.name %></br>
           <%= user.age %>歳</br>
           <%= user.sex %></br>
           <% user.symptoms.each do |symptom| %>
             <% if @pickup_symptoms.include?(symptom.id) %>
                <span class="strong"> <%= symptom.name %></span>
             <% else %>
                <span> <%= symptom.name %></span>
             <% end %>
           <% end %>
        <div class="action clearfix">
          <%= link_to "Profile", user_path(user.id), class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
    <%= paginate @users %>
</div>
<div>
     <%= link_to "戻る", session_path(current_user.id), method: :get, class: "btn btn-primary" %>
</div>
<% end %>

