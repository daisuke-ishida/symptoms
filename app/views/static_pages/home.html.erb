<% if logged_in? %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info"> 
            <%= render 'shared/user_info' %>
        </section>
        <section class="post_form" %>
            <%= render 'shared/post_form' %>
    </aside>
    <div class="col-md-8">
        <h3>Post Feed</h3>
        <%= render 'shared/feed' %>
    </div>
</div>
<% else %>
  <div class="container-fluid" style="margin-top: 80px">
    <div class="col-md-12" style="background-color:#EEEEEE; height: 250px">
      <h1>Let' s Share The Health!</h1>
      <h2>健康の悩みをシェアしてみませんか？</br>
          あなたと同じ悩みを持った人がきっといます。
      </h2>
    </div>
  <div class="col-md-6 well center-block">
      <h3>新規登録はこちら</h3></br>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <div class="col-md-6 well center-block">
      <h3>ログインはこちら</h3></br>
      <%= link_to "Log in", login_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>