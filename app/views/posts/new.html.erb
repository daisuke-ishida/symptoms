<div class="container-fluid well" style="margin-top: 80px">
<h1 class="page-header", style="margin-top:30px">投稿</h1>
  <%= form_for(@post, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
  <div class="form-horizontal", style="height: 300px">
    <div class="col-md-2"></div>
    <div class="field col-md-8">
      <%= f.label :"メッセージ" %>
      <%= f.text_area :content, placeholder: "" %>
    </div>
    <div class="col-md-2"></div>
  </div>
  <div class="form-group", style="height:80px">
    <div class="col-md-2"></div>
    <div class="col-md-8">
　    <span class="image">
　      <%= f.label :"画像" %>
　      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
　    </span>
    </div>
    <div class="col-md-2"></div>
  </div>
  <div class="form-group">
      <div class="col-md-4"></div>
      <div class="col-md-4">
　      <%= f.submit "Post", class: "btn btn-primary" %>
　    </div>
　    <div class="col-md-4"></div></br>
      　<%= link_to "戻る" , session_path(current_user.id), method: :get, class: "btn btn-success" %>
  <% end %>
  <div>
    <%= render 'shared/btn' %>
  </div>
</div>

<script type="text/javascript">
    $('#post_image').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5){
          alert('Maximum file size is 5MB. Please choose a smaller file.');
      }
  });
</script>